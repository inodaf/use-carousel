{
  "name": "@inodaf/use-carousel",
  "version": "0.1.0",
  "description": "A React Hook for creating interactive presentations.",
  "files": [
    "dist"
  ],
  "main": "./dist/use-carousel.umd.js",
  "module": "./dist/use-carousel.es.js",
  "repository": "git@github.com:inodaf/use-carousel.git",
  "author": "Isac Fadoni <https://github.com/inodaf>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start:dev": "vite --config config/vite.config.js",
    "test:watch": "jest --watch",
    "lint": "eslint src/**",
    "test": "jest",
    "build": "vite build --config config/vite.config.js"
  },
  "exports": {
    ".": {
      "import": "./dist/use-carousel.es.js",
      "require": "./dist/use-carousel.umd.js"
    }
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2",
    "vite": "^2.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "useTabs": false
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "ignorePatterns": [
      "node_modules/",
      "dist"
    ]
  }
}
